<h1>New <%= resource %></h1>

<%% form_for(@<%= resource %>) do |form| %>
  <%%= form.error_messages %>
  <fieldset class="inputs">
<% if active_record_defined? -%>
<% columns_for_form.each do |attribute_name, attribute_type| -%>
    <%%= form.<%= attribute_type %> :<%= attribute_name %> %>
<% end -%>
<% end -%>
  </fieldset>
  <fieldset class="buttons">
    <%%= form.submit 'Create', :disable_with => 'Please wait...' %>
  </fieldset>
<%% end %>
